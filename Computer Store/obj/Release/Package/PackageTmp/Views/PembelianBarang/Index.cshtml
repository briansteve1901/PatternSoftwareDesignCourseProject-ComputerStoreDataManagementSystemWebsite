            @Html.DisplayFor(modelItem => item.Expedisi.NamaExpedisi)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Produk.NamaProduk)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Staff.NamaStaff)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Supplier.NamaSupplier)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.IDPembelian }) |
            @Html.ActionLink("Details", "Details", new { id=item.IDPembelian }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.IDPembelian })
        </td>
    </tr>
