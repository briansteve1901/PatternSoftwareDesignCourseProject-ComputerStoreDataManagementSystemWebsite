            @Html.DisplayFor(modelItem => item.HargaProduk)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TanggalPembelian)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.JenisPembayaran)
